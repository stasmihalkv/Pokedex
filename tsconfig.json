{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "constants/*": ["constants/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "stores/*": ["stores/*"],
      "types/*": ["types/*"],
      "routes/*": ["routes/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": [
    "src",
    "scripts",
    "config"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
